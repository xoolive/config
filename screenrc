# no annoying audible bell, please
vbell on

# don't display the copyright page
startup_message off

defscrollback 1000
hardstatus alwayslastline

hardstatus string '%{= kG}%{+b}%{R}%H%{-b} %= %{g}%{=kw}%?%-Lw%?%{g}(%{W}%n %f%t%?(%u)%?%{g})%{g}%?%+Lw%{g}%?%?%= %{W} %D %M %d %c'

escape ^nn

bind ^g screen -t 'Google' links www.google.com
bind ^v screen -t 'vim' vim

bindkey -k k2 focus
bindkey -k k3 prev
bindkey -k k4 next

bindkey -k k5 split 
bindkey -k k6 split -v
bindkey -k k7 remove
bindkey -k k8 only

bindkey -k k8 lockscreen

split -v
screen -t 'vim' 0 vim
focus
screen 

